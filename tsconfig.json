{
    "compilerOptions": {
      "moduleResolution": "node",
      "esModuleInterop": true,
      "lib": ["es2020", "dom"],
      "allowJs": true,
      "declaration": true,
      "emitDeclarationOnly": true,
      "outDir": "./dist",
      "strict": true,
      "noImplicitAny": false,
      "target": "es6",
      "module": "es6",
      "jsx": "preserve",
      "baseUrl": ".",
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }